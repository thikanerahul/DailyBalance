<?xml version="1.0" encoding="utf-8"?>
<com.example.dailybalance.ui.components.Glass3DCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="140dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/bg_glass_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgHabitIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_today"
            app:tint="@color/text_on_background"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textHabitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink Water"
            android:textColor="@color/text_on_background"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/textStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Days"
            android:textColor="@color/accent_cyan"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</com.example.dailybalance.ui.components.Glass3DCard>
